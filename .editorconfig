# https://editorconfig.org/
root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
tab_width = 8
trim_trailing_whitespace = true

[*.php]
indent_style = space
indent_size = 4
continuation_indent_size = 4
max_line_length = 80
quote_type = single

[*.{sh,xml,yaml,yml}]
indent_style = space
indent_size = 2
continuation_indent_size = 2
max_line_length = 80
quote_type = double
